<div class="row">
  <% @albums.each do |album| %>
    <div class="col-xs-6 col-sm-3 col-md-2">
      <div class="thumbnail">

        <div class="caption">
          <h3><%= album.name %></h3>
          <%= link_to 'Show', album %>
          <%= link_to 'Edit', edit_album_path(album) %>
          <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>

