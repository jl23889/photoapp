<nav class="navbar navbar-inverse">
	<div class="navbar-header">
		<div class="navbar-brand">
			PhotoApp
		</div>

		<ul class="nav navbar-nav">
			<li>
				<%= link_to(photos_path) do %>
					<span class="glyphicon glyphicon-camera"></span> Photos
				<% end %>
			</li>
			<li>
				<%= link_to(albums_path) do %>
					<span class="glyphicon glyphicon-th"></span> Albums
				<% end %>
			</li>
		</ul>
		<form class="navbar-form navbar-left" role="search">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Search">
			</div>
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-search"></span>
			</button>
		</form>
		<% if current_user %>
			<ul class="nav navbar-nav">
				<li>
					<%= link_to(photos_path) do %>
						<span class="glyphicon glyphicon-user"></span> <%= current_user.username %>
					<% end %>
				</li>
				<li><%= link_to "Sign Out", log_out_path %></li>
			</ul>
		<% else %>
			<%= form_for :user, url: sign_in_path, html: { class: "navbar-form navbar-left" } do |f| %>
				<%= f.text_field :username, class: "form-control", value: "" %>
				<%= f.text_field :password, class: "form-control", value: "" %>
				<%= f.submit "Login", class: "btn btn-default" %>
			<% end %>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "Register", new_user_path %></li>
			</ul>
		<% end %>
	</div>
</nav>