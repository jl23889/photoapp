<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
			<div class="navbar-brand">
				PhotoApp
			</div>

			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				<span class="glyphicon glyphicon-list"></span>
			</button>
		</div>

		<div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
			<ul class="nav navbar-nav">
				<li>
					<%= link_to(photos_path) do %>
						<span class="glyphicon glyphicon-camera"></span> Photos
					<% end %>
				</li>
				<li>
					<%= link_to(albums_path) do %>
						<span class="glyphicon glyphicon-th"></span> Albums
					<% end %>
				</li>
			</ul>
			<%= form_for :search, url: search_path, method: :get, html: { class: "navbar-form navbar-left", role: "search"} do |f| %>
				<div class="form-group">
					<%= f.text_field :query, class: "form-control", placeholder: "Search", value: @search_query %>
					<button type="submit" class="btn btn-default">
						<span class="glyphicon glyphicon-search"></span>
					</button>
				</div>
			<% end %>
			<ul class="nav navbar-nav navbar-right">
				<% if current_user %>
					<li>
						<%= link_to(user_path) do %>
							<span class="glyphicon glyphicon-user"></span> <%= current_user.username %>
						<% end %>
					</li>
					<li><%= link_to "Sign Out", log_out_path %></li>
				<% else %>
					<li class="dropdown">
						<%= link_to('#', class: "dropdown-toggle", data: { toggle: "dropdown"}) do %>
							Login
						<% end %>
						<ul class="dropdown-menu">
							<li>
								<%= form_for :user, url: sign_in_path do |f| %>
									<%= f.text_field :username, value: "", placeholder: "Username" %>
									<%= f.text_field :password, value: "", placeholder: "Password" %>
									<%= f.submit "Login", class: "btn btn-primary" %>
								<% end %>
							</li>
						</ul>
					</li>
					<li><%= link_to "Register", new_user_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
</nav>